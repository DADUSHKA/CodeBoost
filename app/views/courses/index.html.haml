%body
  %header#head.secondary
%body
  .container
    %ol.breadcrumb
      %li
        %a{:href => "index.html"} Home
      %li.active About
    .row
      / Article main content
      %article.col-sm-10.maincontent
        %header.page-header
          %h1.page-title #{t(".text")}
        - @courses.each do |course|
          %div{class: "course-#{course.id}"}
            = render "#{course.type.underscore}", course: course
        = paginate @courses
      / /Article
      / Sidebar
      %aside.col-sm-2.sidebar.sidebar-right
        .widget
          %h4 Infomations
          %ul.list-unstyled.list-spaces
            %li
            %li
            %li
            %li
      / /Sidebar
  / /container
