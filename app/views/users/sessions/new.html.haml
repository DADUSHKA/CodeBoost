
%body
  .container
    .row
      %article.col-xs-12.maincontent
        %header.page-header
          %h1.page-title Sign in
        .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
          .panel.panel-default
            .panel-body
              %h3.thin.text-center Sign in to your account
              %hr/
              = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                .top-margin
                  = f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    input_html: { class: "form-control" }
                .top-margin
                  = f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    input_html: { class: "form-control" }
                %hr/
                .row
                  .col-lg-4
                    %b= link_to "Forgot your password?", new_password_path(resource_name)
                  .col-lg-4
                    = link_to "Register", new_registration_path(resource_name), class: "btn"
                  .col-lg-4.text-right
                    = f.button :submit, "Sign in", class: "btn btn-action"
