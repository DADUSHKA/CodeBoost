%body
  %header#head.secondary
  / container
  .container
    %ol.breadcrumb
      %li
        = link_to "List users", admin_users_path
      %li.active Admin panel
    .row
      / Article main content
      %article.col-xs-12.maincontent
        %header.page-header
          %h1.page-title Page Admin
        .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
          .panel.panel-default
            .panel-body
              %h3.thin.text-center Assigning roles users
              %hr/
              = simple_form_for [:admin, user] do |f|
                .top-margin
                  = f.input :email, input_html: { class: "form-control" }

                .top-margin
                  = f.association :roles, as: :check_boxes, collection: Role.all
                %hr/
                .row
                  .col-lg-12.text-right
                    = f.button :submit, "Appoint", class: "btn btn-action"
