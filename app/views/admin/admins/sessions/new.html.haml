%body
  %header#head.secondary
%body
  .container
    .row
      %article.col-xs-12.maincontent
        %header.page-header
          %h1.page-title Login Admin
        .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
          .panel.panel-default
            .panel-body
              %h3.thin.text-center Sign in to admin account
              %hr/
              = simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" } do |f|
                = f.error_notification
                .top-margin
                  = f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    input_html: { class: "form-control" }
                .top-margin
                  = f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    input_html: { class: "form-control" }
                %hr/
                .row
                  .col-lg-12.text-right
                    = f.button :submit, "Sign in", class: "btn btn-action"
