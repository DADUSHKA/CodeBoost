%body
  %header#head.secondary
  / container
  .container
    %ol.breadcrumb
      %li
        = link_to t(".back"),  dashboard_course_lessons_path(course)
      %li.active Homework page
    .row
      / Article main content
      %article.col-sm-9.maincontent
        %header.page-header
          %h1.page-title View homework course "#{course.name}"
        %br/
        %h4 #{t(".text")}
        = form_with  url: dashboard_course_homeworks_path(course.id), method: 'get', local: true do |f|
          .row
            .col-sm-4
              = f.select :lesson_id, options_for_select(@lessons.collect { |lesson| [lesson.title.titleize, lesson.id] }), { :include_blank => true }, class: "form-control"
            .col-sm-4
              = f.submit t(".submit"), class: "btn btn-action"
            .col-sm-4
          %br/
          .row
            .col-sm-4
              %h4
                #{t(".home")} #{@lesson_title}
            .col-sm-8.text-right
              = render @homeworks
          .row
            .col-sm-12
              = paginate @homeworks
      / /Article
      / Sidebar
      %aside.col-sm-3.sidebar.sidebar-right
        .widget
          %h4 Address
          %address
            2002 Holcombe Boulevard, Houston, TX 77030, USA
          %h4 Phone:
          %address
            (713) 791-1414
      / /Sidebar
  / /container
%br/
%br/
