%br/
= simple_form_for [:dashboard, course], html: {novalidate: true} do |f|
  .row
    .col-sm-6
      = f.input :name, input_html: { class: "form-control" }
    .col-sm-6
      = f.input :image, input_html: { class: "form-control" }
  .row
    .col-sm-6
      = f.input :number_hours_video, input_html: { class: "form-control" }
    .col-sm-6
      = f.input :number_hours_practice, input_html: { class: "form-control" }
      = f.hidden_field :type
  .row
    .col-sm-6
      = f.input :course_start_date, input_html: { class: "form-control" }
    .col-sm-6
      = f.input :course_end_date, input_html: { class: "form-control" }
      = f.hidden_field :type
  %br/
  .row
    .col-sm-12
      = f.simple_fields_for :course_users do |p_u_f|
        .row
          .col-sm-8
            = render "course_user_fields", f: p_u_f
            .links
              = link_to_add_association t(".add"), f, :course_users, class: "btn"
          .col-sm-4
  = f.simple_fields_for :lessons do |child_form|
    %br/
    .row
      .col-sm-6
        = child_form.input :title, input_html: { class: "form-control" }
      .col-sm-6
        = child_form.input :priority, input_html: { class: "form-control" }
  %br/
  .row
    .col-sm-12.text-right
      = f.submit "Sign in", class: "btn btn-action"
