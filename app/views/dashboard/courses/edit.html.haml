%body
  %header#head.secondary
  / container
  .container
    %ol.breadcrumb
      %li
        = link_to t(".back"),  dashboard_courses_path
      %li.active Edit page
    .row
      / Article main content
      %article.col-sm-9.maincontent
        %header.page-header
          %h1.page-title #{t(".edit")} #{resource.name}
        %br/
        = render "form_#{resource.type.underscore}", course: resource
      / /Article
      / Sidebar
      %aside.col-sm-3.sidebar.sidebar-right
        .widget
          %h4 Infomation
          %address
            %p#notice= notice
            %p.alert= alert
          %h4 Phone:
          %address
            (713) 791-1414
      / /Sidebar
%br/
