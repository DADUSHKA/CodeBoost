= link_to "New lesson",  new_dashboard_course_lesson_path(course)
= link_to "Homework", dashboard_course_homeworks_path(course)
= link_to "Courses", dashboard_courses_path

%h1 Lessons
.lessons
  = form_with url: edit_order_dashboard_course_lessons_path(course), local: true do
    = submit_tag "Edit order lessons"
    %ul
      - @lessons.each do |lesson|
        %li{:class => "#{cycle('lesson-odd', 'lesson-even')}"}
          - if lesson.draft?
            %p The lesson is in drafts
          = link_to lesson.title, dashboard_course_lesson_path(course, lesson)
          = link_to "Edit", edit_dashboard_course_lesson_path(course, lesson)
          = link_to "Delete", dashboard_course_lesson_path(course, lesson), method: :delete, data: { confirm: "Are you sure?" }

= paginate @lessons
