= simple_form_for [:dashboard, course, lesson], html: {novalidate: true} do |f|
  .row
    .col-sm-4
      = f.input :title, input_html: { class: "form-control" }
    .col-sm-4
      = f.input :priority, input_html: { class: "form-control" }
    .col-sm-4
      %p
        To draft
        = f.check_box :draft, input_html: { class: "form-control" }
  .row
    .col-sm-12
      = f.input :description, input_html: { class: "form-control" }
  .row
    .col-sm-12
      = f.input :conspectus, input_html: { class: "form-control" }
  .row
    .col-sm-12
      = f.input :tell_homework, input_html: { class: "form-control" }
  .row
    .col-sm-4
      = f.input :image, input_html: { class: "form-control" }
    .col-sm-4
      = f.input :video, input_html: { class: "form-control" }
    .col-sm-4
      = f.input :start_date, input_html: { class: "form-control" } if course.type == "OnlineIntense"
  %br/
  .row
    .col-sm-12.text-right
      = f.submit class: "btn btn-action"
