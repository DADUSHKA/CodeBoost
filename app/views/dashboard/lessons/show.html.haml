%body
  %header#head.secondary
  / container
  .container
    %ol.breadcrumb
      %li
        = link_to t(".back"),  dashboard_course_lessons_path
      %li.active Lesson show
    .row
      / Article main content
      %article.col-sm-9.maincontent
        %header.page-header
          %h1.page-title= @lesson.title
        %br/
        .row
          .col-sm-6
            %h4 Lesson description
            = @lesson.description
          .col-sm-6
            %h4 Lesson conspectus
            = @lesson.conspectus
        %br/
        .row
          .col-sm-12
            %h4 Lesson video
            = video_tag @lesson.video_url.to_s, :controls =>true
        %br/
        .row
          .col-sm-6
            %h5 Lesson image
            = image_tag @lesson.image.thumb.url

          .col-sm-6.text-right
            %h5 Lesson homework
            = @lesson.tell_homework
      / /Article
      / Sidebar
      %aside.col-sm-3.sidebar.sidebar-right
        .widget
          %h4 Infomation
          %address
            2002 Holcombe Boulevard, Houston, TX 77030, USA
          %h4 Phone:
          %address
            (713) 791-1414
      / /Sidebar
  / /container
%br/
%br/
